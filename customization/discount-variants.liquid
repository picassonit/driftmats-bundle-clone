{% comment %} ===== CUSTOM DISCOUNT CALCULATOR ===== {% endcomment %}
{% comment %}
  Dynamic discount based on product price or tags
{% endcomment %}

{% liquid
  # Higher discounts for expensive products
  if product.price > 5000
    assign discount_2pack = 15
    assign discount_3pack = 25
  elsif product.price > 2000
    assign discount_2pack = 12
    assign discount_3pack = 20
  else
    assign discount_2pack = 10
    assign discount_3pack = 15
  endif
  
  # Special discounts for tagged products
  if product.tags contains 'premium'
    assign discount_2pack = discount_2pack | plus: 5
    assign discount_3pack = discount_3pack | plus: 5
  endif
  
  # Calculate prices
  assign discount_multiplier_2 = 100 | minus: discount_2pack | divided_by: 100.0
  assign discount_multiplier_3 = 100 | minus: discount_3pack | divided_by: 100.0
  
  assign discounted_price_2 = product_price | times: 2 | times: discount_multiplier_2
  assign discounted_price_3 = product_price | times: 3 | times: discount_multiplier_3
%}

